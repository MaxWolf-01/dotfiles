# oyo (diff viewer)
alias oys='oy --staged'
alias oyv='oy view'
oyr() { oy --range "HEAD~${1:-1}..HEAD"; }
oyh() {
  # Usage: oyh <file> [from] [to]
  #   oyh file.txt         → HEAD~1 vs HEAD
  #   oyh file.txt 5       → HEAD~5 vs HEAD
  #   oyh file.txt abc123  → abc123 vs HEAD
  #   oyh file.txt a1 b2   → a1 vs b2
  local file="$1" from="$2" to="${3:-HEAD}"
  [[ -z "$file" ]] && { echo "Usage: oyh <file> [from] [to]"; return 1; }
  [[ -z "$from" ]] && from="HEAD~1"
  [[ "$from" =~ ^[0-9]+$ ]] && from="HEAD~$from"
  oy <(git show "$from:$file") <(git show "$to:$file")
}

