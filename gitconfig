[alias]
    graph='git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative'
    diff='git diff --color | sed "s/^\([^-+ ]*\)[-+ ]/\\1/" | less -r'  # Remove `+` and `-` from start of diff lines; just rely upon color.

[init]
    defaultBranch = master

[core]
    excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local

[pull]
    ff = only