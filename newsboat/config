browser "xdg-open %u"

# Vim-like navigation
bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key g home
bind-key G end

# Show URLs in article list
articlelist-format "%4i %f %D  %?T?|%-17T|  ?%t"

# Reload all feeds on startup
auto-reload yes
reload-time 60

# Sort by date (newest first)
article-sort-order date-desc
