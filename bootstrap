setup_zsh() {
  zsh <(curl -s https://raw.githubusercontent.com/zap-zsh/zap/master/install.zsh) # minimal zsh plugin manager
  sudo chsh -s $(which zsh) $USER # set zsh as default shell
}

install_packages() {
  sudo apt-get update
  sudo apt-get install -y \
    zsh \
    git \
    curl \
    vim \
    htop \
    tree \
    gparted \
    make
  # TODO
}

install_miniconda() {
  mkdir ~/miniconda
  wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh
  bash Miniconda3-latest-Linux-x86_64.sh -b -u -p ~/miniconda  # batch mode (no questions), update, path
  rm Miniconda3-latest-Linux-x86_64.sh
}

clone_repos() {
    # TODO private env file with repo names
    https://stackoverflow.com/questions/10929453/read-a-file-line-by-line-assigning-the-value-to-a-variable
}




install_packages
setup_zsh
