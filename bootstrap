#!/bin/bash

install_apt_packages() {
  sudo apt-get update
  sudo apt-get install -y \
    curl \
    git \
    gparted \
    htop \
    iftop \
    libfuse2 \
    lm-sensors \
    make \
    neofetch \
    nvtop \
    ssh \
    tree \
    vim \
    zathura \
    zsh \
    gnome-shell-extensions-gpaste \
    pulseaudio-module-bluetooth \
    blueman \ 
    python3 \ 
    python3-pip \
    baobab
}

setup_zsh() {
  zsh zap_zsh_install             # minimal zsh plugin manager
  sudo chsh -s "$(which zsh)" "$USER" # set zsh as default shell
}

install_theme() {
  curl -sSL "https://github.com/zthxxx/jovial/raw/master/jovial.zsh-theme" -o ~/jovial.zsh-theme
}

install_fzf() {
  # fuzzy finder
  git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
  ~/.fzf/install
}

disable_screenshot_sound() {
    sudo mv /usr/share/sounds/freedesktop/stereo/camera-shutter.oga /usr/share/sounds/freedesktop/stereo/camera-shutter-disabled.oga
}

echo "Setting ssh folder permissions..."
./bin/ssheperm
echo "Installing apt packages..."
install_apt_packages
echo "Setting up zsh..."
setup_zsh
echo "Installing fzf..."
install_fzf
echo "Installing theme..."
install_theme
echo "Disabling screenshot sound..."
disable_screenshot_sound

