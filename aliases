# git #
#######
# some more are in gitconfig
alias g='git'
alias gst='git status'

# zsh #
#######
alias ll='ls -lah'
alias la='ls -A'
alias l='ls'

alias -- -='cd -' # cd -> cd ~
alias .. = 'cd ..'
alias ... = '.. && ..'
alias .... = '... && ..'
alias mkd ='mkdir -pv'

alias rmf = 'rm -f'

alias reload="source ~/.zshrc"

# conda #
#########
alias mkenv="conda create --name"
alias rmenv="conda env remove --name"
alias lsenv="conda env list"
